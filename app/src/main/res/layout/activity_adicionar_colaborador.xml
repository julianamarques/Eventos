<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdicionarColaboradorActivity"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione o colaborador"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_lista_colaboradores"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <Button
        android:id="@+id/btn_salvar_colaborador"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="@string/salvar"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorVerdeEscuro"
        android:layout_marginTop="50dp"/>



</LinearLayout>